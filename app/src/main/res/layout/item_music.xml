<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/item_music_off_layout"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/colorWhite"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_music_off_img_music"
            android:src="@drawable/music"
            android:layout_marginLeft="10dp"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <LinearLayout
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/item_music_off_txt_name"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:text="Tên bài hát"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/item_music_off_txt_singer"
                android:text="Tên ca sĩ"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_music_off_more"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            android:layout_gravity="center_vertical"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_more_vert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_marginRight="20dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"/>
</LinearLayout>

